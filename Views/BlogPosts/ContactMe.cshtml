@model BlogUser

<!-- Start Banner Area  -->
<div class="axil-banner banner-style-1 bg_image bg_image-3">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner">
                    <h1 class="title">Contact Me</h1>
                    <p class="description">Thank you so much for your support! <br />Now drop me a line to let me know your experience here on the pulse!</p>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- End Banner Area  -->
<!-- Start Post List Wrapper  -->
<div class="axil-post-list-area axil-section-gap bg-color-white">
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-xl-8">
                <!-- Start About Area  -->
                <div class="axil-about-us">
                    <div class="inner">
                        <h2>Say Hello! </h2>
                        <p>Thank you so much for supporting the blog just by viewing the post and dropping a comment or two on the blogs.  </p>
                        <p>If you are interested in collaborating on a project, getting more insight into a particular post that may have caught your interest, or just have general questions for me, please use the form below to send me an email. Emails are checked multiple time per day so I will get back you. I am looking forward to communicating with you or collaborating on any future projects. Have a great day and if you are a fellow developer, Happy Coding!</p>
                        <p class="primary-color">Email: <a href="#">jerry.mckee.jr@gmail.com</a></p>
                    </div>
                    <!-- Start Contact Form  -->
                    <div class="axil-section-gapTop axil-contact-form-area">
                        <h4 class="title mb--10">Send Us a Message</h4>
                        <p class="b3 mb--30">Your email address will not be published. All the fields are required.</p>
                        <form method="post" asp-action="ContactMe" class="contact-form--1 row">
                            <div class="col-lg-6 col-md-6 col-12">
                                <div class="form-group">
                                    <label for="contact-name">First Name</label>
                                    <input asp-for="FirstName">
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-12">
                                <div class="form-group">
                                    <label for="contact-phone">Last Name</label>
                                    <input asp-for="LastName">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input asp-for="Email">
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="contact-message">Message</label>
                                    <textarea id="editor" name="message"></textarea>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-submit">
                                    <button type="submit" class="axil-button button-rounded btn-primary">Submit</button>
                                </div>
                            </div>
                        </form>
                    </div>
                    <!-- End Contact Form  -->
                </div>
                <!-- End About Area  -->
            </div>
        </div>
    </div>
</div>
<!-- End Post List Wrapper  -->
@section scripts {

    <!--Sweet Alerts-->
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
        let message = '@(ViewBag.SwalMessage)';
        if (!message.includes("Error") && message != '') {
            Swal.fire({
                backdrop: false,
                icon: 'success',
                title: message,
                showConfirmButton: true
            });
        } else if (message.includes("Error")) {
            Swal.fire({
                backdrop: false,
                icon: 'error',
                title: 'Oops...',
                text: message
            });
        }
    </script>
    <!--End Sweet Alerts-->
    <!--CK Editor-->
    <script src="https://cdn.ckeditor.com/ckeditor5/37.1.0/classic/ckeditor.js"></script>

    <script>
        ClassicEditor
            .create(document.querySelector('.editor'), {
                licenseKey: '',
            })
            .then(editor => {
                window.editor = editor;
            });
    </script>
    <!--End CK Editor-->
}
